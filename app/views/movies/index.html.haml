-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to 'Movie Title', {controller: :movies, action: :sort_title, id: movie["id"]}, :method => :sort_title
      %th Rating
      %th= link_to 'Release Date', {controller: :movies, action: :sort_date, id: movie["id"]}, :method => :sort_date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path

